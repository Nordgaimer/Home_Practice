
import java.sql.*;

public class Main 
{


	public static void main(String[] args) throws InstantiationException, IllegalAccessException, ClassNotFoundException 
	{
		Connection connection = null;
		Statement stmt = null;
		ResultSet result = null;

		Driver driver = (Driver) Class.forName("org.sqlite.JDBC").newInstance();
		String ulr = "jdbc:sqlite:C:\\Users\\User\\Диск Google\\DB\\Persons.db";
		try 
		{
			connection = DriverManager.getConnection(ulr);
		} 
		catch (SQLException e) 
		{
			new ClassNotFoundException();
			e.printStackTrace();
		}

		String sql = "SELECT * FROM lib_First_Names";
		try {
			stmt = connection.createStatement();
		} catch (SQLException e) {
			new Exception();
			e.printStackTrace();
		}
		try {
			result = stmt.executeQuery(sql);
		} catch (SQLException e) {
			new Exception();
			e.printStackTrace();
		}

		try {
			while (result.next())
			{
				System.out.println(result.getString("name_en")+" "+result.getString("name_ru"));
			}
		} catch (SQLException e) {
			new Exception();
			e.printStackTrace();
		}


	}

}
